<Window
    x:Class="AutomaticUpdateWpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutomaticUpdateWpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="CurrentVersion"
            Grid.Row="0"
            FontSize="20"
            Text="Loading..." />
        <TextBlock
            x:Name="NewVersion"
            Grid.Row="1"
            Background="DarkCyan"
            FontSize="20" />
        <Button
            Grid.Row="2"
            Click="Button_Click"
            Content="Update"
            FontSize="20"
            FontWeight="Bold" />

    </Grid>
</Window>
